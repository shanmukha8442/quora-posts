    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
</head>
<body>
    <div class="m">
        <h2>Edit your post</h2>
        <p>post id :<%= post.id %></p>
        <p>post username:<%= post.username %></p>
        <form method="post" action="/posts/<%= post.id %>/edit?_method=PATCH">
